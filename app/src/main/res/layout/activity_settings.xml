<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:theme="@style/Base.Theme.PlaylistMakerSetting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:padding="4dp"
        android:layout_marginBottom="24dp">
        <Button
            android:id="@+id/arrow_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            app:icon="@drawable/arrow1"
            app:iconTint="@color/icon_color"/>
        <TextView
            android:id="@+id/text_settings_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_1"
            android:fontFamily="@font/ys_display_bold_medium"
            android:text="@string/text_button_settings"
            android:paddingLeft="@dimen/padding_text_header_setting"
            android:paddingBottom="@dimen/padding_text_header_setting"
            android:paddingTop="@dimen/padding_text_header_setting" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_setting"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/theme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/ysdisplay"
            android:paddingLeft="@dimen/padding_left_text_setting"
            android:paddingTop="@dimen/padding_top_text_setting"
            android:paddingBottom="@dimen/padding_bottom_text_setting"
            android:text="@string/black_theme"
            android:textSize="@dimen/text_size_setting" />
        <Switch
            android:id="@+id/switch1"
            android:layout_width="56dp"
            android:layout_height="48dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_setting"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/ysdisplay"
            android:paddingLeft="@dimen/padding_left_text_setting"
            android:paddingTop="@dimen/padding_top_text_setting"
            android:paddingBottom="@dimen/padding_bottom_text_setting"
            android:text="@string/share_app"
            android:textSize="@dimen/text_size_setting" />
        <Button
            android:id="@+id/icon_round"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginBottom="@dimen/button_margin_bottom"
            android:layout_marginTop="@dimen/button_margin_top"
            android:layout_marginRight="@dimen/button_margin_right"
            app:icon="@drawable/icon_round"
            app:iconTint="@color/icon_color2"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" />
        ></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_setting"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/support"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/ysdisplay"
            android:paddingLeft="@dimen/padding_left_text_setting"
            android:paddingTop="@dimen/padding_top_text_setting"
            android:paddingBottom="@dimen/padding_bottom_text_setting"
            android:text="@string/call"
            android:textSize="@dimen/text_size_setting" />
        <Button
            android:id="@+id/icon_call"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginBottom="@dimen/button_margin_bottom"
            android:layout_marginTop="@dimen/button_margin_top"
            android:layout_marginRight="@dimen/button_margin_right"
            app:icon="@drawable/call"
            app:iconTint="@color/icon_color2"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"/>
        ></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_setting"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/terms"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/ysdisplay"
            android:paddingLeft="@dimen/padding_left_text_setting"
            android:paddingTop="@dimen/padding_top_text_setting"
            android:paddingBottom="@dimen/padding_bottom_text_setting"
            android:text="@string/terms_of_use"
            android:textSize="@dimen/text_size_setting" />
        <Button
            android:id="@+id/arrow"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_marginBottom="@dimen/button_margin_bottom"
            android:layout_marginTop="@dimen/button_margin_top"
            android:layout_marginRight="@dimen/button_margin_right"
            app:icon="@drawable/arrow2"
            app:iconTint="@color/icon_color2"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"/>
        ></LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.PlaylistMaker"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingStart="16dp"

            android:text="@string/header"

            android:fontFamily="@font/ys_display_bold_medium"
            android:textSize="@dimen/text_size_1"

            />
    </LinearLayout>

    <Button
        android:id="@+id/button_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="@dimen/button_margin_start_end_bottom"
        android:layout_marginEnd="@dimen/button_margin_start_end_bottom"
        android:layout_marginBottom="@dimen/button_margin_start_end_bottom"
        android:layout_weight="1"
        android:backgroundTint="@color/button_color"
        app:cornerRadius="@dimen/button_radius"
        android:foreground="?attr/selectableItemBackground"

        app:icon="@drawable/search"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/icon_color"

        android:text="@string/text_button_search"
        android:textSize="@dimen/text_size_1"
        android:textColor="@color/text_button_color"
        android:fontFamily="@font/ys_display_bold_medium"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/button_media_library"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/button_margin_start_end_bottom"
        android:layout_marginEnd="@dimen/button_margin_start_end_bottom"
        android:layout_marginBottom="@dimen/button_margin_start_end_bottom"
        android:layout_weight="1"
        android:backgroundTint="@color/button_color"
        app:cornerRadius="@dimen/button_radius"
        android:foreground="?attr/selectableItemBackground"

        app:icon="@drawable/media_library"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/icon_color"

        android:text="@string/text_button_media_library"
        android:textSize="@dimen/text_size_1"
        android:textColor="@color/text_button_color"
        android:fontFamily="@font/ys_display_bold_medium"
        android:textAlignment="center"
        />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/button_margin_start_end_bottom"
        android:layout_marginEnd="@dimen/button_margin_start_end_bottom"
        android:layout_marginBottom="@dimen/button_margin_start_end_bottom"
        android:layout_weight="1"
        android:backgroundTint="@color/button_color"
        app:cornerRadius="@dimen/button_radius"
        android:foreground="?attr/selectableItemBackground"

        app:icon="@drawable/settings"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/icon_padding"
        app:iconTint="@color/icon_color"

        android:text="@string/text_button_settings"
        android:textSize="@dimen/text_size_1"
        android:textColor="@color/text_button_color"
        android:fontFamily="@font/ys_display_bold_medium"
        android:textAlignment="center"
        />

</LinearLayout>